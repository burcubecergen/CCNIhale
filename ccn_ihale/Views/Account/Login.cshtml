@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<script src="~/js/checkbox_remember.js" asp-append-version="true"></script>
<div class="container top_sizey ">
    <div class="row">
        <div class="col-sm-offset-2 col-lg-offset-2 col-md-offset-2 col-lg-2 col-md-2 col-sm-2 col-xs-4 ">
            <a href="" id="backgroundandposition"><img src="~/images/login_ccninsaat.PNG" /></a>
        </div>

        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <h3 class="h3_bold h3_position x_hidden">
                İHALE PLATFORMU
            </h3>
        </div>

    </div>
    <div class="row top_size">
        <div class="col-sm-offset-2 col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-12">
            <p class="p_fonttype">Lütfen ihale yetkilisi tarafından verilen kullanıcı adı ve şifrenizi giriniz.</p>
        </div>
    </div>
    <div class="row top_sizec">
        <div class="col-xs-offset-3 col-md-offset-3 col-lg-offset-3 col-lg-9 col-md-9 col-sm-9 col-xs-9">
            <p id="login_check" class="p_bold p_colorred">@ViewBag.error</p>
        </div>
    </div>
    <form action="/Account/Login" method="post">
        @Html.AntiForgeryToken()
        <div class="row top_sizec">
            <div class="col-sm-offset-1 col-md-offset-1 col-lg-offset-1  col-lg-3 col-md-3 col-sm-3 col-xs-4">
                <p class="p_fonttype p_size p_right p_position">Kullanıcı Adı:</p>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <input asp-for="LoginName" style='text-transform:lowercase' class="form-control textbox_size" />
            </div>
        </div>

        <div class="row top_sizec">
            <div class="col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-lg-3 col-md-3 col-sm-3 col-xs-4 ">
                <p class="p_fonttype p_size p_right p_position p_position_pass">Parola:</p>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <input asp-for="Sifre" type="password" class="form-control textbox_size text-lowercase " />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-offset-4 col-md-offset-4 col-lg-offset-4 col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <input asp-for="RememberMe" type="checkbox" id="myCheck" onclick="myFunction()">
                <p class="notification" id="text">Beni Hatırla</p>
            </div>

        </div>
        <div class="row">
            <div class="col-xs-offset-5 col-md-offset-5 col-lg-offset-5 col-lg-7 col-md-7 col-sm-7 col-xs-7">
                <button type="submit" class="btn btn-primary ">Giriş</button>
            </div>
        </div>
    </form>
</div>



