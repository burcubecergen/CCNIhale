@model SoruViewModel
@{
    ViewData["Title"] = "Qusend";
    Layout = "~/Views/Shared/_Layout_Second.cshtml";
}
<div class="container top_sizec ">
    <div class="row">
        <div class="col-sm-offset-2 col-lg-offset-2 col-md-offset-2 col-lg-2 col-md-2 col-sm-2 col-xs-4 ">
            <a href="" id="backgroundandposition"><img src="~/images/login_ccninsaat.PNG" /></a>
        </div>

        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <h3 class="h3_bold h3_position x_hidden">
                İHALE PLATFORMU
            </h3>
        </div>
    </div>
   
    <div class="row top_sizec">
        <div class="col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
            <div class="form-popup_textarea">
                <div class="row top_sizey  h4_position">
                    <div class="col-sm-offset-4 col-lg-offset-4 col-md-offset-4 col-lg-8 col-md-8 col-sm-8 col-xs-12 ">
                        <h4 class=" h4_color h4_bold">
                            SORU GÖNDER
                        </h4>
                    </div>
                </div>
                <div class="row top_sizec">
                    <div class="col-sm-offset-2 col-lg-offset-2 col-md-offset-2  col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <p class="p_fonttype">Sorularınız ihale komisyonunca en kısa sürede cevaplanacaktır.</p>
                    </div>
                </div>
                <form asp-action="Qusend" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row top_sizec">
                        <div class="col-sm-offset-1 col-md-offset-1 col-lg-offset-1  col-lg-3 col-md-3 col-sm-3 col-xs-4">
                            <p class="p_fonttype  p_right p_position">İhale Konusu:</p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <select asp-for="IhaleID" id="combobox1" class="combobox comb_size form-control">

                                @foreach (IhalePaket ih in Model.ihalepaketList)
                                {

                                    @foreach (KullaniciIhaleYetkisi ki in Model.kullaniciihaleyetkilisiList)
                                    {

                                        if (ki.IhalePaketID == ih.ID)
                                        {
                                            <option value="@ih.ID">@ih.Konu </option>
                                        }

                                    }

                                }
                            </select>

                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <p class="p_bold p_colorred">@ViewBag.sign</p>
                        </div>
                    </div>
                    <div class="row top_sizec">
                        <div class="col-sm-offset-2 col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-12 ">
                            <div class="row">
                                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-8 ">
                                        <div class="form-group textarea_position textarea_size ">
                                            <textarea asp-for="SoruPost" class="form-control rounded-0" id="exampleFormControlTextarea1" rows="20"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-4">
                                        <p class="p_bold p_colorred">@ViewBag.sign</p>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <div class="row top_sizec ">
                        <div class="col-xs-offset-4 col-md-offset-4 col-sm-offset-4 col-lg-offset-4 col-lg-9 col-md-9 col-sm-9 col-xs-9">
                            <p class="p_bold p_colorred">@ViewBag.error</p>
                        </div>
                    </div>
                    <div class="row top_sizec ">
                        <div class="col-xs-offset-7 col-md-offset-7 col-lg-offset-7 col-lg-5 col-md-5 col-sm-5 col-xs-5">
                            <button type="submit" class="btn btn-primary ">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    

</div>
