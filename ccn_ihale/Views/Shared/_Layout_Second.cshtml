
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -CCN HOLDİNG</title>


    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-datetimepicker.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
   
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Ihl" class="navbar-brand" id="color_nav">CCN HOLDİNG</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Ihl" id="color_nav">Ana Sayfa</a></li>
                    @if (ViewBag.adminYetki != false)
                    {
                        <li><a asp-controller="Home" asp-action="Ihladd" id="color_nav">İhale Ekle</a></li>
                        <li><a asp-controller="Home" asp-action="Users" id="color_nav">Kullanıcı Düzenle</a></li>
                        <li><a asp-controller="Home" asp-action="Authorization" id="color_nav">Yetkiler</a></li>
                    }
                    <li><a asp-controller="Home" asp-action="Contact" id="color_nav">İletişim</a></li>
                    <li><a asp-controller="Account" asp-action="LogOut" id="color_nav">Çıkış</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <p>CCN Holding Bilgi Teknolojileri tarafından geliştirilmiştir.</p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <p> 2018 - CCN İHALE PLATFORMU</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-datetimepicker.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-datetimepicker.tr.js" asp-append-version="true"></script>
    <script>
        $('.form_datetime').datetimepicker({
            language: 'tr',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
        });
    </script>
</body>
</html>
